# UniMind AI Assistant 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ===== OpenAI API 配置 =====
# OpenAI API密钥 (必须)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API基础URL (可选，默认为官方API)
# OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI模型配置
# OPENAI_MODEL=gpt-4
# OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=2048

# ===== Streamlit 配置 =====
# Streamlit服务端口
STREAMLIT_SERVER_PORT=8501

# Streamlit服务地址
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# 是否无头模式运行
STREAMLIT_SERVER_HEADLESS=true

# 是否收集使用统计
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# 文件监控类型
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none

# ===== 应用配置 =====
# Python路径
PYTHONPATH=/app

# 时区设置
TZ=Asia/Shanghai

# 调试模式 (开发环境设为true，生产环境设为false)
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== 设备连接配置 =====
# ADB工具路径
ADB_PATH=/app/platform-tools/adb

# 默认设备ID (可选)
# DEFAULT_DEVICE_ID=your_device_id

# ===== 数据库配置 (如果使用) =====
# DATABASE_URL=sqlite:///app/data/unimind.db

# ===== 安全配置 =====
# 会话密钥 (生产环境请使用强密码)
# SESSION_SECRET_KEY=your_secret_key_here

# ===== 其他配置 =====
# 最大文件上传大小 (MB)
MAX_UPLOAD_SIZE=50

# 缓存过期时间 (秒)
CACHE_TTL=3600

# ===== 联通服务配置 =====
# 联通APP包名
UNICOM_PACKAGE_NAME=com.sinovatech.unicom.ui

# 默认等待时间 (秒)
DEFAULT_WAIT_TIME=3

# ===== Docker特定配置 =====
# 容器名称
CONTAINER_NAME=unimind-ai-assistant

# 是否使用pip镜像源 (true/false)
PIP_MIRROR=false

# 资源限制
MEMORY_LIMIT=4g
CPU_LIMIT=2.0
MEMORY_RESERVATION=1g
CPU_RESERVATION=0.5
